                    alert(result.message);
                    window.location.href="/";
                },
                complete:function(){

                },
                error:function(XMLHttpRequest, textStatus, errorThrown){
                    alert(""+XMLHttpRequest.readyState + textStatus);
                }
            });
        }
    }

