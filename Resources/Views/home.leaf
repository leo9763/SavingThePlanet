    <!--占位内容-->
    <div class="container">
      <div class="jumbotron">
        <h1>SoloLearn</h1>
        <p>Learn to code for FREE!</p>
      </div>
    </div>

    <!--登录模态框-->
    <div id="myModal" class="modal fade"  id="mymodal" tabindex="-1" ole="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 class="modal-title" id="myModalLabel" align="center">账号登录</h3>
          </div>
          <div class="modal-body">
            <form class="form-horizontal" role="form" name="form" action="/login" method="GET">
              <div class="form-group" id="div1">
                <label for="firstname" class="col-sm-2 control-label">邮箱：</label>
                <div class="col-sm-10" id="user">
                  <input type="text" class="form-control tooltip-test" id="name" placeholder="请输入邮箱" name="username" data-toggle="tooltip" data-placement="bottom" data-trigger="focus" title="请输入6-8位字符或数字任意组合" style="width: 370px" onblur="checkInput()">
                  <label id="nameAlert" style="color: red;"></label>
                </div>
              </div>

              <div class="form-group" id="div2">
                <label for="lastname" class="col-sm-2 control-label">密码：</label>
                <div class="col-sm-10">
                  <input type="password" class="form-control tooltip-test" id="pwd" placeholder="请输入密码" name="password" data-toggle="tooltip" data-placement="bottom" title="请输入6位密码" data-trigger="focus" style="width: 370px" onblur="checkInput()">
                  <label id="passwordAlert" style="color: red;"></label>
                </div>
              </div>

              <div class="form-group form-inline">
                <div class="col-sm-offset-2 col-sm-2">
                  <div class="checkbox">
                    <label><input type="checkbox">请记住我</label>
                  </div>
                </div>

                <div class="col-sm-offset-1 col-sm-2">
                  <button type="submit" class="btn btn-success" id="loginBtn">登录</button>
                </div>
              </div>  
            </form>
          </div>
          <div class="modal-footer"><a href="/register">没有账号?>>立即注册</a></div>
        </div>
      </div>
    </div>


  </body>
</html>

